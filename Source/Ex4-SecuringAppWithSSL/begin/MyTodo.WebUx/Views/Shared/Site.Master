<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<%@ Master Language="C#" Inherits="System.Web.Mvc.ViewMasterPage" %>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <title>
        <asp:ContentPlaceHolder ID="TitleContent" runat="server" />
    </title>
    <link href="<%=Url.Content("~/Content/styles/site.css")%>" rel="stylesheet" type="text/css" />
    <asp:ContentPlaceHolder ID="StylesContent" runat="server"></asp:ContentPlaceHolder>
</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo">
                <h1>
                    <img src="<%=Url.Content("~/Content/images/header_logo.png")%>" width="241" height="121" alt="" />                    
                </h1>
            </div>
            <div id="toolbar">
                <asp:ContentPlaceHolder ID="ToolbarContent" runat="server">
                <% Html.RenderPartial("LogOnUserControl"); %>
                </asp:ContentPlaceHolder>
            </div>
        </div>
        <div id="pageWrapper">
            <div id="page">
                <hr />                                                        
                <ul id="navigation">
                    <% if (Request.IsAuthenticated) %>
                    <% { %>
                        <li><%=Html.ActionLink("My List", "", "Lists")%> </li>
                    <% } %>
                    <% else %>
                    <% { %>
                    <li><%= Html.ActionLink("Home", "Index", "Home")%></li>
                    <% } %>
                    <li><%= Html.ActionLink("About", "About", "Home") %></li>
                </ul>
                <hr />
        <div id="main">
            <asp:ContentPlaceHolder ID="MainContent" runat="server" />
                </div>
            </div>
        </div>
            <div id="footer">
            <hr />
            <p class="copyright">
                &copy; 2009 Microsoft Corporation.  All rights reserved.</p>
            <p class="powered"><a href="http://www.microsoft.com/azure/windowsazure.mspx"><img src="<%=Url.Content("~/Content/images/powered-by-azure.png")%>" width="188" height="38" alt="Powered by Windows Azure" /></a></p>
        </div>
        <asp:ContentPlaceHolder ID="ScriptsContent" runat="server" />
    </div>
</body>
</html>
