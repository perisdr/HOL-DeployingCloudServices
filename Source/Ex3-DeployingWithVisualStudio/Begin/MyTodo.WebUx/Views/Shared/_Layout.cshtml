<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <title>
        @ViewBag.Title
    </title>
    <link href="@(Url.Content("~/Content/styles/site.css"))" rel="stylesheet" type="text/css" />
	<link href="@(Url.Content("~/Content/styles/redmond/jquery-ui-1.7.2.custom.css"))" rel="stylesheet" type="text/css" />
    @RenderSection("StylesContent", required: false)
</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo">
                <h1>
                    <img src="@(Url.Content("~/Content/images/header_logo.png"))" width="241" height="121" alt="" />
                </h1>
            </div>
            <div id="toolbar">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div id="pageWrapper">
            <div id="page">
                <hr />
                <ul id="navigation">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@(Html.ActionLink("My List", "", "Lists"))
                        </li>
                    }
                    else
                    {
                        <li>@(Html.ActionLink("Home", "Index", "Home"))</li>
                    }
                    <li>@(Html.ActionLink("About", "About", "Home"))</li>
                </ul>
                <hr />
                <div id="main">
                    @RenderSection("MainContent", required: false)
                </div>
            </div>
        </div>
        <div id="footer">
            <hr />
            <p class="copyright">
                &copy; 2012 Microsoft Corporation. All rights reserved. (Deployed with Visual Studio)</p>
        </div>
        @RenderSection("ScriptsContent", required: false)
    </div>
</body>
</html>
